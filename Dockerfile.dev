FROM node:18-alpine

WORKDIR /app

# Install Python and build dependencies for node-gyp
RUN apk add --no-cache python3 make g++ gcc

# Copy package.json files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy project files
COPY . .

# Expose port
EXPOSE 5000

# Start the application in development mode
CMD ["npm", "run", "dev"]